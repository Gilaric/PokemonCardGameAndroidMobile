<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".GameActivity">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/iv_playerOneCard"
            android:layout_width="200dp"
            android:layout_height="400dp"
            android:layout_gravity="fill"
            />



        <ImageView
            android:id="@+id/iv_playerTwoCard"
            android:layout_width="200dp"
            android:layout_height="400dp"
            android:layout_gravity="fill"
            />



    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <Button
            android:id="@+id/btn_next_battle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Next battle" />
        <Button
            android:id="@+id/btn_return_home"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Return home" />
        <TextView
            android:id="@+id/tv_playerOne_score_counter"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            />
        <TextView
            android:id="@+id/tv_playerTwo_score_counter"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            />
    </LinearLayout>


</LinearLayout>